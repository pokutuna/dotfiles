# Ghostty Configuration
# https://ghostty.org/docs/config

# Font
font-family = "VL Gothic"
font-size = 18

# Theme
# ghostty +list-themes | grep -i dark
# theme = Elegant
# theme = Doom One
# theme = Cobalt Next
# theme = Catppuccin Mocha
# theme = Breeze
# theme = Arcoiris
# theme = Bluloco Dark
theme = Tomorrow Night Eighties
background-opacity = 1

# Window
window-padding-x = 8
window-padding-y = 4

# Cursor
cursor-style = block

# Bell
bell-features = system,title,attention

# Shell integration
shell-integration = zsh

# macOS specific
macos-option-as-alt = left

# Global hotkey
keybind = global:ctrl+grave_accent=toggle_visibility

# TODO: Claude Code が fixterms 形式 (^[[27;2;13~) を認識したら削除する
# Ghostty は Shift+Enter を fixterms 形式で送るが、tmux がパススルーできないため ESC+CR に変換する
# ref: https://github.com/anthropics/claude-code/issues/1282
# ref: https://github.com/ghostty-org/ghostty/issues/1850
keybind = shift+enter=text:\x1b\r

# Update
auto-update-channel = tip

